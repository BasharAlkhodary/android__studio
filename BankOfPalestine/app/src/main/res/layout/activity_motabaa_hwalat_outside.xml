<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_t1"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/keyboard_backspace_40"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/v_v1"
            android:layout_marginTop="50dp"
            android:background="#CEE0F3"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/v_v1"
            android:layout_marginTop="0dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:text="متابعة الحوالات الخارجية"
            android:textColor="@color/normal"
            android:textSize="20sp"
            android:drawableEnd="@drawable/baseline_usb_30"

            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/tv_tv2"
            android:layout_below="@id/tv_name"
            android:paddingRight="40dp"
            android:drawableEnd="@drawable/turn_slight_left_24"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_tv3"
            android:layout_below="@id/tv_tv2"
            android:text="To view external transfars, use the filter"
            android:textSize="15dp"
            android:textColor="@color/normal"
            android:paddingLeft="25dp"

            />
    </RelativeLayout>
</ScrollView>