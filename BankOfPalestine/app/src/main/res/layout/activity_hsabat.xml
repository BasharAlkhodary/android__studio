<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_tt1"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/keyboard_backspace_40"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/v_v1"
            android:layout_marginTop="50dp"
            android:background="#CEE0F3"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/v_v1"
            android:layout_marginTop="0dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:text="الحسابات"
            android:textColor="@color/normal"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/v_v1"
            android:layout_marginTop="0dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:text="Available balances"
            android:textColor="#7A111013"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:id="@+id/ed_ed1"
            android:layout_below="@id/tv_name2"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="ودائع العملاء دفاتر التوفير ILS"
            android:textColor="@color/normal"
            android:textSize="18sp"
            android:paddingRight="25dp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:id="@+id/v_v2"
            android:layout_below="@id/ed_ed1"
            android:layout_centerHorizontal="true"
            android:background="#AAB0B6"

            />
        <TextView
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:id="@+id/ed_ed2"
            android:layout_below="@id/v_v2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="200dp"
            android:text="ILS 920.05 "
            android:textColor="@color/normal"
            android:textSize="18sp"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:id="@+id/bt_btn1"
            android:layout_below="@id/v_v2"
            android:layout_marginLeft="30dp"
            android:text=" فعال    "
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:drawableEnd="@drawable/keyboard_arrow_left_30"
            />
    </RelativeLayout>
</ScrollView>